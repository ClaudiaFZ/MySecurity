<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="usuario"
            type="com.example.mysecurity.Usuario" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{usuario.correo}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/boton_ayuda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF0000"
                android:gravity="center"
                android:text="@string/ayuda" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/boton_acompatir_ubicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/compartir_ubicacion" />

                <Button
                    android:id="@+id/boton_atravesar_zona"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atravesando_zona" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_grabar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grabar" />

                <Button
                    android:id="@+id/boton_sonido_flash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sonido_flash" />
            </LinearLayout>

            <Button
                android:id="@+id/boton_mapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/mapa" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>