<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="usuario"
            type="com.example.mysecurity.Usuario" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:weightSum="30">

            <!--TextView
                android:id="@+id/inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{usuario.correo}" /-->

            <Button
                android:id="@+id/boton_ayuda"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:backgroundTint="#FF0000"
                android:gravity="center"
                android:text="@string/ayuda"
                android:layout_weight="15"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:weightSum="2">

                <Button
                    android:id="@+id/boton_compartir_ubicacion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/compartir_ubicacion"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/boton_atravesar_zona"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/atravesando_zona"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/boton_grabar"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/grabar"
                    android:layout_width="0dp"/>

                <Button
                    android:id="@+id/boton_sonido_flash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/sonido_flash" />
            </LinearLayout>

            <Button
                android:id="@+id/boton_mapa"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_alignParentBottom="true"
                android:text="@string/mapa" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>